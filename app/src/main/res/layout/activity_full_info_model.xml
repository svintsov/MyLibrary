<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <variable
      name="model"
      type="com.example.svintsov.mylibrary.model.ExampleModel"/>
  </data>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/coverView"
      android:layout_width="150dp"
      android:layout_height="250dp"
      android:layout_marginStart="16dp"
      android:layout_alignParentStart="true"
      android:layout_alignTop="@+id/mainTextView"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:scaleType="fitXY"
      android:src="@drawable/default_cover"/>
    <TextView
      android:id="@+id/mainTextView"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="21dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:text="@{model.toString()}"
      android:textIsSelectable="true"
      android:textSize="@dimen/info_model_size"
      />
    <TextView
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="52dp"
      android:layout_alignBottom="@+id/coverView"
      android:layout_alignStart="@+id/mainTextView"
      android:text="@{model.isAvailable() ? @string/available_true : @string/available_false}"
      android:textColor="@{model.isAvailable() ? @color/colorGreen :@color/colorRed}"
      android:id="@+id/textView3"/>
    <TextView
      android:id="@+id/text_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="22dp"
      android:layout_alignStart="@+id/coverView"
      android:layout_below="@+id/coverView"
      android:textSize="@dimen/info_model_size"
      android:textColor="#000000"
      android:text="@string/description"/>
    <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="22dp"
      android:layout_alignStart="@+id/text_description"
      android:layout_below="@+id/text_description"
      android:text="@{model.description}"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/floatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="21dp"
      android:layout_marginEnd="17dp"
      android:layout_alignEnd="@+id/textView3"
      android:layout_alignParentBottom="true"
      android:elevation="4dp"
      android:clickable="true"
      android:src="@drawable/ic_send"/>
  </RelativeLayout>
</layout>
