<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <variable
      name="model"
      type="com.example.svintsov.mylibrary.model.ExampleModel"/>
  </data>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/coverView"
      android:layout_width="150dp"
      android:layout_height="250dp"
      android:layout_marginStart="16dp"
      android:layout_alignParentStart="true"
      android:layout_alignTop="@+id/mainTextView"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:scaleType="fitXY"
      android:src="@drawable/default_cover"/>
    <TextView
      android:id="@+id/mainTextView"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="21dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:text="@{model.toString()}"
      android:textSize="@dimen/info_model_size"
      android:textIsSelectable="true"
      />
    <TextView
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="52dp"
      android:layout_alignBottom="@+id/coverView"
      android:layout_alignStart="@+id/mainTextView"
      android:text="@{model.isAvailable() ? @string/available_true : @string/available_false}"
      android:textColor="@{model.isAvailable() ? @color/colorGreen :@color/colorRed}"/>
  </RelativeLayout>
</layout>
